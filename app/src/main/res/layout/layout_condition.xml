<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/low_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/textbox_blue"
        android:paddingVertical="2dp"
        android:paddingHorizontal="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:inputType="number"
        android:hint="Low"/>


    <EditText
        android:id="@+id/high_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/textbox_pink"
        android:paddingVertical="2dp"
        android:paddingHorizontal="4dp"
        android:layout_marginHorizontal="4dp"
        android:inputType="number"
        android:hint="High"/>


    <EditText
        android:id="@+id/decision_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/textbox_violet"
        android:paddingVertical="2dp"
        android:paddingHorizontal="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:hint="Message to show"/>

    <ImageView
        android:id="@+id/condition_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_delete"/>
</LinearLayout>